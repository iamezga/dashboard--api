{
	"name": "dashboard--api",
	"version": "1.0.0",
	"description": "Backend API for a generic dashboard app, focusing on core functionalities like user authentication, user management, and CRUD operations (e.g., roles/permissions/posts/items,etc).",
	"main": "index.js",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"build": "rimraf dist && tsc",
		"start": "node dist/index.js",
		"dev": "dotenv -e .env -- ts-node-dev --respawn --transpile-only --exit-child --require tsconfig-paths/register src/index.ts",
		"lint": "eslint \"{src,test}/**/*.ts\"",
		"lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
		"format": "prettier --write \"{src,test}/**/*.ts\"",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iamezga/dashboard--api.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/iamezga/dashboard--api/issues"
	},
	"homepage": "https://github.com/iamezga/dashboard--api#readme",
	"dependencies": {
		"@sentry/node": "^10.0.0",
		"@sentry/profiling-node": "^10.0.0",
		"convict": "^6.2.4",
		"cors": "^2.8.5",
		"express": "^5.1.0",
		"fastest-validator": "^1.19.1",
		"helmet": "^8.1.0",
		"tslib": "^2.8.1",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.32.0",
		"@types/convict": "^6.1.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/helmet": "^4.0.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.1.0",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"dotenv-cli": "^10.0.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"globals": "^16.3.0",
		"husky": "^9.1.7",
		"jest": "^30.0.5",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.4.0",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	}
}
